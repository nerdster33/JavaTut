        System.out.println("The average is: " + Average);

		
	
		
	
	}
	public static double Average() {// for argument with unknown variable
		double total = 0, 
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter how many numbers you will to know the average: ");
		//int numberValue = Integer.parseInt(scan.nextLine());
		int numberValue = scan.nextInt();
		
	
	int arrayOfNumbers[] = new int[numberValue];
	for (int i = 0; i < arrayOfNumbers.length; i++) {
		System.out.println("Enter the number"
				+ " " + (i+1)+ ": ");
		arrayOfNumbers[i]= scan.nextInt();
		
		 for (int x : arrayOfNumbers) {
	            total += x;
	        }
	            return total / arrayOfNumbers.length;
	 
}
